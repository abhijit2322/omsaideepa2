<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


    <TextView
        android:id="@+id/tenantname"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="Enter Tenanent Name" />

    <EditText
        android:id="@+id/e_tenantname"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/tenantname"
        android:hint="Enter Tenent Name" />

    <TextView
        android:id="@+id/e_ownerflatno"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_below="@+id/e_tenantname"
        android:text="Enter Owner Flatno" />

    <EditText
        android:id="@+id/e_ownerflatno_no"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:layout_below="@+id/e_ownerflatno"
        android:inputType="none"
        android:editable="false"
        />

    <TextView
        android:id="@+id/e_renter_ph"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_below="@+id/e_ownerflatno_no"
        android:text="Enter Renter Phone Number" />

    <EditText
        android:id="@+id/e_renter_ph_no"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/e_renter_ph"
        android:hint="Enter Renter Phone Number" />

    <TextView
        android:id="@+id/e_renter_emails"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_below="@+id/e_renter_ph_no"
        android:text="Enter Renter Email ID" />

    <EditText
        android:id="@+id/e_renter_email"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/e_renter_emails"
        android:hint="Enter Owner Email ID" />


    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/e_renter_email"
        android:text="Update" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/e_renter_email"
        android:layout_toRightOf="@+id/update"
        android:text="Delete" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/e_renter_email"
        android:layout_toRightOf="@+id/delete"
        android:text="Back" />

</RelativeLayout>