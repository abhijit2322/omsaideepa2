<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textStyle="bold"
    android:textColorHint="#00f"
    android:textColor="#00f"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_bg_main1"
        android:src="@drawable/omd2image"/>

    <ImageView
        android:id="@+id/profile_bg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentWhite"
        android:textStyle="bold"
        android:textColorHint="#00f"
        android:textColor="#00f"/>
    <include layout="@layout/profile_app_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textColorHint="#00f"
        android:textColor="#00f">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin25"
                android:layout_marginBottom="@dimen/margin10"
                android:textStyle="bold"
                android:textColorHint="#00f"
                android:textColor="#00f">

                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparentWhiteMed"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin90"
                    android:paddingTop="@dimen/margin10"
                    android:paddingRight="@dimen/margin10"
                    android:paddingBottom="@dimen/margin10"
                    android:textStyle="bold"
                    android:textColorHint="#00f"
                    android:textColor="#00f">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/renter_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sTitleSub"
                        android:textStyle="bold"
                        android:textColorHint="#00f"
                        android:textColor="#00f"/>


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/renter_flatnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin2"
                        android:textColorHint="#00f"
                        android:textColor="#00f"
                        android:textSize="@dimen/sTitleSub2"
                        android:textStyle="italic" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/checkbox_level"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Maintance paid for this month ?"
                        android:textStyle="bold"
                        android:textColorHint="#00f"
                        android:textColor="#00f"/>

                        <CheckBox
                            android:id="@+id/maintance_paid"
                            android:layout_width="129dp"
                            android:layout_height="50dp"
                            android:layout_toRightOf="@+id/checkbox_level"
                            android:textStyle="bold"
                            android:textColorHint="#00f"
                            android:textColor="#00f"
                             />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparentWhiteDark"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_below="@+id/name_layout"
                    android:textStyle="bold"
                    android:textColorHint="#00f"
                    android:textColor="#00f">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textStyle="bold"
                        android:textColorHint="#00f"
                        android:textColor="#00f">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_email"
                            android:layout_gravity="center"
                            android:tint="@color/black"
                            android:textStyle="bold"
                            android:textColorHint="#00f"
                            android:textColor="#00f"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/renter_email_id"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin10"
                            android:textSize="@dimen/sTitleSub3"
                            android:textStyle="bold"
                            android:textColorHint="#00f"
                            android:textColor="#00f"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin10">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColorHint="#00f"
                            android:textColor="#00f">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_phone"
                                android:tint="@color/black"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColorHint="#00f"
                                android:textColor="#00f"/>
                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sTitleSub3"
                                android:layout_gravity="center"
                                android:id="@+id/renter_ch_no"
                                android:layout_marginLeft="@dimen/margin10"
                                android:textStyle="bold"
                                android:textColorHint="#00f"
                                android:textColor="#00f"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/margin5"
                            android:layout_weight="1"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_home_phone"
                                android:tint="@color/black"
                                android:layout_gravity="center"/>
                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sTitleSub3"
                                android:id="@+id/renter_ph_no"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/margin5"
                                android:textStyle="bold"
                                android:textColorHint="#00f"
                                android:textColor="#00f"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/margin5"
                            android:layout_weight="1"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_work_phone"
                                android:tint="@color/black"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColorHint="#00f"
                                android:textColor="#00f"
                                />
                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sTitleSub3"
                                android:textStyle="bold"
                                android:textColorHint="#00f"
                                android:textColor="#00f"
                                android:id="@+id/renter_ph_no_work"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/margin5"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin10">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/location"
                            android:tint="@color/black"
                            android:layout_gravity="center"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/renter_address"
                            android:text="Bangaore"
                            android:textSize="@dimen/sTitleSub3"
                            android:textStyle="bold"
                            android:textColorHint="#00f"
                            android:textColor="#00f"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin10"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/margin70"
                android:layout_height="@dimen/margin70"
                android:layout_marginLeft="@dimen/margin20"
                android:src="@drawable/omd2image"
                android:layout_marginTop="@dimen/margin2"
                android:id="@+id/profile_img_main"
                android:textStyle="bold"
                android:textColorHint="#00f"
                android:textColor="#00f"/>

            <ImageView
                android:layout_width="@dimen/margin70"
                android:layout_height="@dimen/margin70"
                android:layout_marginLeft="@dimen/margin20"
                android:src="@drawable/omd2image"
                android:layout_marginTop="@dimen/margin2"
                android:id="@+id/profile_img"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColorHint="#00f"
            android:textColor="#00f">
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/parent_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/rippleColor"
                app:mrl_rippleOverlay="true"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColorHint="#00f"
                android:textColor="#00f">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColorHint="#00f"
                        android:textColor="#00f"/>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/parent_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyish"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/rippleColor"
                app:mrl_rippleOverlay="true"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColorHint="#00f"
                android:textColor="#00f">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secondary"
                        android:textStyle="bold"
                        android:textColorHint="#00f"
                        android:textColor="#00f"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
